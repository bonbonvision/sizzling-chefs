<div class="form-container">
  <div class="form-content">
    <h2 class="text-center">Sign up</h2>
    <br/>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "First Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :last_name, required: true, autofocus: true, placeholder: "Last Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, required: true, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.input :type, as: :radio_buttons, collection: ["Chef", "Customer"] %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, required: true, placeholder: "Confirm Password", class: "form-control" %>
      </div>

      <div>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %> Remember Me
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-primary"  %>
      </div>
    <% end %>
  </div>
</div>



